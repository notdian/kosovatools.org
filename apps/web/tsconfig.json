{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@workspace/payroll": ["../../packages/payroll/src/index.ts"],
      "@workspace/payroll/*": ["../../packages/payroll/src/*.ts"],
      "@workspace/payroll-ui": ["../../packages/payroll-ui/src/index.ts"],
      "@workspace/payroll-ui/*": ["../../packages/payroll-ui/src/*.tsx"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
