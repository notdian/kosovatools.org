{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/customs-codes": ["../../packages/customs-codes/src/index.ts"],
      "@workspace/customs-codes/*": ["../../packages/customs-codes/src/*"],
      "@workspace/data-insights": ["../../packages/data-insights/src/index.ts"],
      "@workspace/data-insights/*": ["../../packages/data-insights/src/*"],
      "@workspace/payroll": ["../../packages/payroll/src/index.ts"],
      "@workspace/payroll/*": ["../../packages/payroll/src/*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
